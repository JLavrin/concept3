{
  "scripts": {
    "dev": "nodemon --watch \"src/**\" --ext \"ts\" --exec \"ts-node --project tsconfig.json src/index.ts\"",
    "build": "tsc --module commonjs --project tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@zerollup/ts-transform-paths": "^1.7.18",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "tsc-alias": "^1.8.4",
    "tsconfig-paths": "^4.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.5",
    "nodemon": "^2.0.21",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  }
}
